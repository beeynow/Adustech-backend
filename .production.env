# Environment
NODE_ENV=production

# Port (Railway/Vercel will override this)
PORT=5000

# PostgreSQL Database URL (from Railway/hosting provider)
DATABASE_URL=postgresql://username:password@host:port/database

# Power Admin Email
POWER_ADMIN_EMAIL=myusman137@gmail.com

# Cloudinary Configuration
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret

# Email Configuration (Gmail App Password)
EMAIL_USER=adustechapp@gmail.com
EMAIL_PASSWORD=emwmekgqipdxtdei

# Session Secret (MUST CHANGE THIS IN PRODUCTION!)
